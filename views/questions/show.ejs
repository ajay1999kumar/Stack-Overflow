<%- include("../partials/header")%>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Dashboard</p>
			<div class ="list-group">
				<li class="list-group-item active"> Info 1</li>
				<li class="list-group-item">Info 2 </li>
				<li class="list-group-item"> Info 3</li>
				
			</div>
			
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				
				<img class="img-responsive" src="<%=question.image%>">
				<div class="caption-full">
					<h4 class="pull-right">$.9</h4>
					<h4><a> <%=question.name%> </a> </h4>
					<p> <%=question.description%></p>
					<p> 
						<em>Submitted By <%=question.author.username%></em>
					</p>
					
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/question/<%= question._id %>/comments/new">Add new comment</a>
					
				</div>
				<hr>
				<% question.comments.forEach(function(comment){%>
				     <div class="row">
						 <div class="col-md-12">
							 <strong> <%=comment.author%> </strong>
							 <span class="pull-right">10 days ago</span>
							 <p>
								 
								<%=comment.text %>
							</p>
							 
						 </div>
						 
					</div>
						

	
				<%})%>
				
			</div>
			
		</div>
		
	</div>
	
</div>
